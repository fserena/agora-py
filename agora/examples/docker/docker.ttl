@prefix docker: <http://www.docker.com/vocabulary#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<http://www.docker.com/vocabulary> rdf:type owl:Ontology .

docker:Host a owl:Class .

docker:Entity a owl:Class ;
        rdfs:subClassOf [
                            rdf:type owl:Restriction ;
                            owl:onProperty docker:identifier ;
                            owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger
                        ],
                        [
                            rdf:type owl:Restriction ;
                            owl:onProperty docker:creationTime ;
                            owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger
                        ] .

docker:Image rdfs:subClassOf docker:Entity .

docker:Container rdfs:subClassOf docker:Entity,
                        [
                            rdf:type owl:Restriction ;
                            owl:onProperty docker:fromImage ;
                            owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger
                        ],
                        [
                            rdf:type owl:Restriction ;
                            owl:onProperty docker:state ;
                            owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger
                        ] .

docker:identifier a owl:DatatypeProperty ;
    rdfs:range xsd:string .

docker:state a owl:DatatypeProperty ;
    rdfs:range xsd:string .

docker:name a owl:DatatypeProperty ;
    rdfs:range xsd:string .

docker:hasImage a owl:ObjectProperty ;
    rdfs:domain docker:Host ;
    rdfs:range docker:Image .

docker:hasContainer a owl:ObjectProperty ;
    rdfs:domain docker:Host ;
    rdfs:range docker:Container .

docker:fromImage a owl:ObjectProperty ;
    rdfs:domain docker:Container ;
    rdfs:range docker:Image .

docker:hasContainer a owl:ObjectProperty ;
    rdfs:domain docker:Host ;
    rdfs:range docker:Container.

docker:creationTime a owl:DatatypeProperty ;
    rdfs:domain docker:Entity ;
    rdfs:range xsd:dateTime .
